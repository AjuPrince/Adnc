<Project Sdk="Microsoft.NET.Sdk.Web">
  <Import Project="..\..\..\build\common.props" />
  <PropertyGroup>
   <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    <DockerfileContext>..\..\..</DockerfileContext>
    <Description>客户中心服务</Description>
  </PropertyGroup>

	<Target Name="BuildTheApplicationProject" BeforeTargets="BeforeBuild">
		<MSBuild Projects="..\Adnc.Cus.Application\Adnc.Cus.Application.csproj" Targets="Build" Properties="Configuration=$(Configuration);Platform=$(Platform)" />
	</Target>
	<Target Name="CopyTheApplicationFilesAfterBuild" AfterTargets="AfterBuild">
		<ItemGroup>
			<OutputFileToCopy Include="..\Adnc.Cus.Application\bin\$(Configuration)\$(TargetFramework)\*.*" />
		</ItemGroup>
		<Copy SkipUnchangedFiles="true" SourceFiles="@(OutputFileToCopy)" DestinationFolder=".\bin\$(Configuration)\$(TargetFramework)" />
		<Copy SkipUnchangedFiles="true" SourceFiles="@(OutputFileToCopy)" DestinationFolder=".\bin\$(Configuration)\$(TargetFramework)\$(RuntimeIdentifier)" Condition="'$(Configuration)'=='Release'" />
	</Target>
	<Target Name="CopyTheApplicationFilesAfterPublish" AfterTargets="AfterPublish">
		<ItemGroup>
			<OutputFileToCopy Include=".\bin\$(Configuration)\$(TargetFramework)\$(RuntimeIdentifier)\*.*" />
		</ItemGroup>
		<Copy SkipUnchangedFiles="true" SourceFiles="@(OutputFileToCopy)" DestinationFolder="$(PublishUrl)" Condition="'$(Configuration)'=='Release'" />
	</Target>
	
  <ItemGroup>
    <Compile Remove="logs\**" />
    <Content Remove="logs\**" />
    <EmbeddedResource Remove="logs\**" />
    <None Remove="logs\**" />
  </ItemGroup>


	<ItemGroup>
		<PackageReference Include="Autofac.Extensions.DependencyInjection" Version="7.2.0" />
		<PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="6.0.3">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
		<PackageReference Include="Microsoft.EntityFrameworkCore.Tools" Version="6.0.3">
			<PrivateAssets>all</PrivateAssets>
			<IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
		</PackageReference>
	</ItemGroup>

	<ItemGroup>
		<Content Update="nlog.config">
			<CopyToOutputDirectory>Always</CopyToOutputDirectory>
		</Content>
	</ItemGroup>


  <ItemGroup>
    <ProjectReference Include="..\..\Shared\Adnc.Shared.WebApi\Adnc.Shared.WebApi.csproj" />
    <ProjectReference Include="..\Adnc.Cus.Application.Contracts\Adnc.Cus.Application.Contracts.csproj" />
  </ItemGroup>

  <ProjectExtensions>
    <VisualStudio>
      <UserProperties properties_4launchsettings_1json__JsonSchema="http://json.schemastore.org/launchsettings.json" />
    </VisualStudio>
  </ProjectExtensions>
</Project>